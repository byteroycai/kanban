generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Column {
  id     Int    @id @default(autoincrement())
  name   String
  order  Int    @unique
  tasks  Task[]
}

model Task {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  columnId    Int
  column      Column   @relation(fields: [columnId], references: [id])
  position    Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
